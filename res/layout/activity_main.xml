<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_color_4"
	android:orientation="vertical" >

	<Button
		android:id="@+id/btnShowMenu"
		style="@style/ButtonTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/item_base_menu_margin_4dp"
		android:paddingRight="@dimen/item_base_menu_margin_4dp"
		android:text="@string/button_name_show_menu"
		android:textColor="@android:color/black"
		android:textStyle="italic" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="@dimen/activity_padding_64dp" >

		<ImageView
			android:id="@+id/imageItem"
			android:layout_width="@dimen/large_picture_width"
			android:layout_height="@dimen/large_picture_height"
			android:gravity="center_horizontal" />

		<TextView
			android:id="@+id/tvTitleItem"
			style="@style/TextViewTheme"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal" />

		<TextView
			android:id="@+id/tvBodyItem"
			style="@style/TextViewTheme"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal" />

		<TextView
			android:id="@+id/tvAddressItem"
			style="@style/TextViewTheme"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal" />
	</LinearLayout>

</LinearLayout>