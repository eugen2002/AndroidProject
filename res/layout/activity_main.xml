<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/background_color_3"
	android:orientation="vertical" >

	<Button
		android:id="@+id/btnShowMenu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@color/background_color_2"
		android:text="@string/show_menu"
		android:textStyle="italic"
		android:paddingLeft="@dimen/item_base_menu_margin_4dp"
		android:paddingRight="@dimen/item_base_menu_margin_4dp"
		android:textSize="@dimen/title_text_size" />

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:padding="@dimen/activity_padding_64dp" >

		<ImageView
			android:id="@+id/imageItem"
			android:layout_width="@dimen/large_picture_width"
			android:layout_height="@dimen/large_picture_height"
			android:contentDescription="@string/content_description"
			android:gravity="center_horizontal"
			android:visibility="visible" />

		<TextView
			android:id="@+id/tvTitleItem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textIsSelectable="true"
			android:textSize="@dimen/list_title_text_size" />

		<TextView
			android:id="@+id/tvBodyItem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textIsSelectable="true"
			android:textSize="@dimen/list_title_text_size" />

		<TextView
			android:id="@+id/tvAddressItem"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:textIsSelectable="true"
			android:textSize="@dimen/list_title_text_size" />
	</LinearLayout>

</LinearLayout>