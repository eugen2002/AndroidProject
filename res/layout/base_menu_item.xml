<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/activity_horizontal_margin"
	android:paddingBottom="@dimen/item_base_menu_margin_4dp"
	android:paddingLeft="@dimen/item_base_menu_margin_4dp"
	android:orientation="horizontal" >

	<ImageView
		android:id="@+id/picture"
		android:layout_width="@dimen/picture_width"
		android:layout_height="@dimen/picture_height"
		android:contentDescription="@string/content_description"
		android:layout_gravity="center_vertical"/>

	<LinearLayout
		android:id="@+id/lin_layout_base_menu_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/item_base_menu_margin_4dp"
		android:paddingBottom="@dimen/item_base_menu_margin_4dp"
		android:layout_marginLeft="@dimen/activity_horizontal_margin_16dp"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/test_string"
			android:textSize="@dimen/title_text_size" />

		<TextView
			android:id="@+id/tv_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/item_base_menu_margin_8dp"
			android:text="@string/test_string"
			android:textSize="@dimen/body_text_size" />
	</LinearLayout>

</LinearLayout>