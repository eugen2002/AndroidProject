<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_color_4"
	android:orientation="vertical" >

	<Button
		android:id="@+id/btnShowList"
		style="@style/ButtonTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/item_base_menu_margin_4dp"
		android:paddingRight="@dimen/item_base_menu_margin_4dp"
		android:text="@string/button_name_show_list" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:padding="@dimen/activity_padding_48dp" >

		<ImageView
			android:id="@+id/imageItem"
			android:layout_width="@dimen/large_picture_width"
			android:layout_height="@dimen/large_picture_height"
			android:gravity="center_horizontal"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingLeft="@dimen/activity_padding_24dp" >

			<TextView
				android:id="@+id/tvTitleItem"
				style="@style/TextViewTheme"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left" />

			<TextView
				android:id="@+id/tvBodyItem"
				style="@style/TextViewTheme"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left" />

			<TextView
				android:id="@+id/tvAddressItem"
				style="@style/TextViewTheme"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>